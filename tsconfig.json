{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "module": "NodeNext",
    "target": "es6",
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "types", "webpack.config.ts"],
  "exclude": ["node_modules"]
}
