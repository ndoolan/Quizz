{
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "module": "NodeNext",
    // "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "outDir": "./dist"
  },
  // "files": ["src/index.tsx", "server/index.ts"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types",
    "webpack.config.ts",
    "declarations.d.ts"
  ],
  "exclude": ["node_modules"]
}
